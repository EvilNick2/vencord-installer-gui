{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vencord Installer GUI",
  "version": "1.0.1",
  "identifier": "com.EvilNick.vig",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "Vencord Installer",
        "width": 1400,
        "height": 800,
        "minWidth": 900,
        "minHeight": 650,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["msi", "dmg", "appimage", "deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYwMzU3Nzc0Nzk3NkE2ODMKUldTRHBuWjVkSGMxWUFLOHN1T1cyTTNNdTlaS1ZDMVF4dVdESVFORUpDRW5pa0FHdGh6aGNIL3cK",
      "endpoints": [
        "https://evilnick2.github.io/vencord-installer-gui/latest.json"
      ]
    }
  }
}
